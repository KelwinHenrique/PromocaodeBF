<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#FAFAFA"

        >
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/iv_imagem"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_titulo"
            android:textSize="15dp"
            android:text="TV 42 POLEGADAS SO 100"
            android:textColor="@color/colorPrimaryDark"
            android:padding="4dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_titulo"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/tv_loja"
            android:textSize="15dp"
            android:text="Loja Americanas"
            android:padding="4dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dat_hora"
                android:textSize="10dp"
                android:gravity="end"
                android:text="18/09   20:29"
                android:textColor="@color/colorPrimaryDark"
                android:padding="8dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_valor"
                android:textSize="25dp"
                android:gravity="end"
                android:text="R$ 600,00"
                android:textColor="#311B92"
                android:padding="8dp"
                android:textStyle="bold"
                />

        </LinearLayout>






    </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:orientation="horizontal"
        android:background="#BDBDBD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:layout_weight="3.5"
            >

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_star"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:textSize="15dp"
                android:text="4,5"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/tv_classificacao"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:layout_weight="3.5"
            >

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_visualizacao"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:textSize="15dp"
                android:text="100"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/tv_visualizacao"
                />
        </LinearLayout>







    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:orientation="horizontal"
        >

    </LinearLayout>

</LinearLayout>