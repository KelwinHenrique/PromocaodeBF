<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kelwin.primeiro.promobf.Activity.ActivityPrincipal">

    <include android:id="@+id/toolbar_principal"
        layout="@layout/toolbar_principal"
        ></include>


    <kelwin.primeiro.promobf.Helper.SlidingTabLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/stl_tabs"
        android:background="@color/colorPrimary">

    </kelwin.primeiro.promobf.Helper.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pagina"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight = "1"
        />

</LinearLayout>
